<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.cuioss.nifi</groupId>
        <artifactId>nifi-extensions</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>e-2-e-playwright</artifactId>
    <packaging>pom</packaging>

    <name>NiFi Extensions :: End-to-End Playwright Tests</name>
    <description>End-to-End Playwright tests for NiFi Extensions</description>

    <properties>
        <maven.deploy.skip>true</maven.deploy.skip>
        <maven.install.skip>true</maven.install.skip>
        <docker.script.dir>${project.basedir}/../integration-testing/src/main/docker</docker.script.dir>
        <nifi.base.url>https://localhost:9095/nifi</nifi.base.url>
        <keycloak.url>http://localhost:9080</keycloak.url>
        <!-- Fail-fast configuration -->
        <maven.test.failure.ignore>false</maven.test.failure.ignore>
        <maven.build.timeout>180</maven.build.timeout> <!-- 3 minutes max -->
        <nifi.startup.timeout>120</nifi.startup.timeout> <!-- 2 minutes for NiFi startup -->
        <playwright.timeout>120</playwright.timeout> <!-- 2 minutes for Playwright tests -->
        <!-- Code quality configuration -->
        <skip.lint>false</skip.lint> <!-- Run linting by default, skip only for integration tests -->
        <!-- skipPlaywrightTests default inherited from root POM, overridden by integration-tests profile -->
        <!-- Include this module in SonarQube analysis -->
        <sonar.skip>false</sonar.skip>
        <!-- Test output directory — uses Playwright's default (target/) so
             Maven and npx produce results in the same location -->
        <playwright.output.dir>${project.build.directory}</playwright.output.dir>
    </properties>

    <build>
        <plugins>
            <!-- Node.js and npm management -->
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>${frontend.maven.plugin.version}</version>
                <configuration>
                    <nodeVersion>${frontend.node.version}</nodeVersion>
                    <npmVersion>${frontend.npm.version}</npmVersion>
                    <installDirectory>target</installDirectory>
                </configuration>
                <executions>
                    <!-- Install Node and NPM -->
                    <execution>
                        <id>install-node-and-npm</id>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <phase>initialize</phase>
                    </execution>
                    <!-- Install dependencies -->
                    <execution>
                        <id>npm-install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>
                    <!-- Run linting to check code quality -->
                    <execution>
                        <id>npm-lint</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <arguments>run lint:strict</arguments>
                            <skip>${skip.lint}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Exec Maven Plugin for container management — Docker executions use
                 skip.docker.deployment; test executions use skipPlaywrightTests -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${maven.exec.plugin.version}</version>
                <executions>
                    <!-- pre-clean: safety-net stop -->
                    <execution>
                        <id>stop-docker-containers</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>pre-clean</phase>
                        <configuration>
                            <executable>bash</executable>
                            <workingDirectory>${docker.script.dir}</workingDirectory>
                            <arguments>
                                <argument>./scripts/stop-containers.sh</argument>
                            </arguments>
                            <environmentVariables>
                                <LOG_DIR>${project.build.directory}</LOG_DIR>
                            </environmentVariables>
                            <successCodes>
                                <successCode>0</successCode>
                                <successCode>1</successCode>
                            </successCodes>
                            <skip>${skip.docker.deployment}</skip>
                        </configuration>
                    </execution>
                    <!-- pre-integration-test: deploy NAR + start + wait -->
                    <execution>
                        <id>deploy-and-start</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <executable>bash</executable>
                            <workingDirectory>${docker.script.dir}</workingDirectory>
                            <arguments>
                                <argument>./scripts/deploy-and-start.sh</argument>
                            </arguments>
                            <environmentVariables>
                                <PROJECT_ROOT>${maven.multiModuleProjectDirectory}</PROJECT_ROOT>
                            </environmentVariables>
                            <skip>${skip.docker.deployment}</skip>
                        </configuration>
                    </execution>

                    <!-- Run all Playwright tests in a single invocation.
                         Playwright's project system (playwright.config.cjs) handles ordering:
                         auth-setup -> self-tests -> functional + accessibility.
                         This saves ~2 Chromium launches and ~2 auth cycles. -->
                    <execution>
                        <id>run-playwright-tests</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>integration-test</phase>
                        <configuration>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <executable>npx</executable>
                            <arguments>
                                <argument>--yes</argument>
                                <argument>playwright</argument>
                                <argument>test</argument>
                                <argument>--reporter=dot</argument>
                            </arguments>
                            <environmentVariables>
                                <PLAYWRIGHT_BASE_URL>${nifi.base.url}</PLAYWRIGHT_BASE_URL>
                                <PLAYWRIGHT_KEYCLOAK_URL>${keycloak.url}</PLAYWRIGHT_KEYCLOAK_URL>
                                <PLAYWRIGHT_OUTPUT_DIR>${playwright.output.dir}</PLAYWRIGHT_OUTPUT_DIR>
                                <TEST_RESULTS_DIR>${playwright.output.dir}/test-results</TEST_RESULTS_DIR>
                                <PLAYWRIGHT_REPORT_DIR>${playwright.output.dir}/playwright-report</PLAYWRIGHT_REPORT_DIR>
                                <PW_TEST_HTML_REPORT_OPEN>never</PW_TEST_HTML_REPORT_OPEN>
                            </environmentVariables>
                            <skip>${skip.docker.deployment}</skip>
                        </configuration>
                    </execution>
                    
                    <!-- post-integration-test: collect logs + stop -->
                    <execution>
                        <id>cleanup-containers</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>post-integration-test</phase>
                        <configuration>
                            <executable>bash</executable>
                            <workingDirectory>${docker.script.dir}</workingDirectory>
                            <arguments>
                                <argument>./scripts/stop-containers.sh</argument>
                            </arguments>
                            <environmentVariables>
                                <LOG_DIR>${project.build.directory}</LOG_DIR>
                            </environmentVariables>
                            <successCodes>
                                <successCode>0</successCode>
                                <successCode>1</successCode>
                            </successCodes>
                            <skip>${skip.docker.deployment}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
