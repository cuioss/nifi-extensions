{
  "name": "e-2-e-cypress",
  "version": "1.0.0",
  "description": "End-to-End Cypress tests for NiFi Extensions - Implements centralized JavaScript/ESLint standards",
  "scripts": {
    "cypress:selftests": "cypress run --config-file cypress.selftests.config.js",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "nifi:check": "node scripts/nifi-manager.js --check-only",
    "nifi:start": "node scripts/nifi-manager.js --auto-start",
    "nifi:force-start": "node scripts/nifi-manager.js --force-start",
    "nifi:status": "node scripts/nifi-manager.js --status",
    "test:full": "./scripts/test-runner.sh --full",
    "test:quick": "./scripts/test-runner.sh --quick",
    "test:build-only": "./scripts/test-runner.sh --build-only",
    "test:status": "./scripts/test-runner.sh --status",
    "analyze:console": "node scripts/log-analyzer.js --basic",
    "analyze:logs": "node scripts/log-analyzer.js --enhanced",
    "analyze:logs-verbose": "node scripts/log-analyzer.js --enhanced --verbose",
    "lint": "eslint 'cypress/**/*.js'",
    "lint:fix": "eslint 'cypress/**/*.js' --fix",
    "lint:check": "eslint 'cypress/**/*.js' --max-warnings 0",
    "lint:strict": "eslint 'cypress/**/*.js' --max-warnings 0 --report-unused-disable-directives",
    "format": "prettier --write 'cypress/**/*.js'",
    "format:check": "prettier --check 'cypress/**/*.js'"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.13.4",
    "axe-core": "^4.10.3",
    "cypress": "^14.4.1",
    "cypress-axe": "^1.6.0",
    "cypress-multi-reporters": "^1.6.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-jsdoc": "^46.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "jwt-decode": "^4.0.0",
    "mocha": "^10.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.4.2"
  }
}
