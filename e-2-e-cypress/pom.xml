<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.cuioss.nifi</groupId>
        <artifactId>nifi-extensions</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>e-2-e-cypress</artifactId>
    <packaging>pom</packaging>

    <name>NiFi Extensions :: End-to-End Cypress Tests</name>
    <description>End-to-End Cypress tests for NiFi Extensions</description>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>${frontend.maven.plugin.version}</version>
                <executions>
                    <!-- Install Node and NPM -->
                    <execution>
                        <id>install-node-and-npm</id>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <nodeVersion>${frontend.node.version}</nodeVersion>
                            <npmVersion>${frontend.npm.version}</npmVersion>
                        </configuration>
                    </execution>
                    <!-- Install dependencies -->
                    <execution>
                        <id>npm-install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>
                    <!-- Run linting to check code quality -->
                    <execution>
                        <id>npm-lint</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <arguments>run lint:check</arguments>
                        </configuration>
                    </execution>
                    <!-- Run self-verification tests (integration tests for core commands) -->
                    <execution>
                        <id>cypress-selftests</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>integration-test</phase>
                        <configuration>
                            <arguments>run cypress:selftests</arguments>
                            <skip>true</skip>
                            <environmentVariables>
                                <CYPRESS_BASE_URL>https://localhost:9095/nifi</CYPRESS_BASE_URL>
                                <CYPRESS_KEYCLOAK_URL>https://localhost:9085/auth</CYPRESS_KEYCLOAK_URL>
                            </environmentVariables>
                        </configuration>
                    </execution>
                    <!-- Run actual E2E tests only if self-tests pass (requires containers to be running) -->
                    <execution>
                        <id>cypress-e2e</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>integration-test</phase>
                        <configuration>
                            <arguments>run cypress:run</arguments>
                            <environmentVariables>
                                <CYPRESS_BASE_URL>https://localhost:9095/nifi</CYPRESS_BASE_URL>
                                <CYPRESS_KEYCLOAK_URL>https://localhost:9085/auth</CYPRESS_KEYCLOAK_URL>
                            </environmentVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>local-integration-tests</id>
            <activation>
                <property>
                    <name>integration.test.local</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>${frontend.maven.plugin.version}</version>
                        <executions>
                            <!-- Install Node and NPM -->
                            <execution>
                                <id>local-install-node-and-npm</id>
                                <goals>
                                    <goal>install-node-and-npm</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <nodeVersion>${frontend.node.version}</nodeVersion>
                                    <npmVersion>${frontend.npm.version}</npmVersion>
                                </configuration>
                            </execution>
                            <!-- Install dependencies -->
                            <execution>
                                <id>local-npm-install</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <arguments>install</arguments>
                                </configuration>
                            </execution>
                            <!-- Run linting to check code quality -->
                            <execution>
                                <id>local-npm-lint</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <arguments>run lint:check</arguments>
                                </configuration>
                            </execution>
                            <!-- Run self-verification tests (integration tests for core commands) -->
                            <execution>
                                <id>local-cypress-selftests</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <arguments>run cypress:selftests</arguments>
                                    <environmentVariables>
                                        <CYPRESS_BASE_URL>https://localhost:9095/nifi</CYPRESS_BASE_URL>
                                        <CYPRESS_KEYCLOAK_URL>https://localhost:9085/auth</CYPRESS_KEYCLOAK_URL>
                                    </environmentVariables>
                                </configuration>
                            </execution>
                            <!-- Run actual E2E tests -->
                            <execution>
                                <id>local-cypress-e2e</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <phase>integration-test</phase>
                                <configuration>
                                    <arguments>run cypress:run</arguments>
                                    <environmentVariables>
                                        <CYPRESS_BASE_URL>https://localhost:9095/nifi</CYPRESS_BASE_URL>
                                        <CYPRESS_KEYCLOAK_URL>https://localhost:9085/auth</CYPRESS_KEYCLOAK_URL>
                                    </environmentVariables>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
