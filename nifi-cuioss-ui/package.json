{
  "name": "nifi-cuioss-ui",
  "version": "1.0.0",
  "type": "module",
  "description": "Provides custom UI components for NiFi CU Boulder CUIOSS extensions.",
  "main": "src/main/webapp/js/app.js",
  "scripts": {
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "stylelint": "stylelint \"src/main/webapp/css/**/*.css\"",
    "stylelint:fix": "stylelint \"src/main/webapp/css/**/*.css\" --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --coverage --watchAll=false --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CU-Boulder-OIT/nifi-cuioss.git"
  },
  "keywords": [
    "NiFi",
    "Custom UI",
    "JWT",
    "CUIOSS"
  ],
  "author": "OIT-CSS",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/CU-Boulder-OIT/nifi-cuioss/issues"
  },
  "homepage": "https://github.com/CU-Boulder-OIT/nifi-cuioss#readme",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^38.0.0"
  },
  "jest": {
    "verbose": false,
    "testEnvironment": "jest-environment-jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/target/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src/main/webapp/js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/test/js/**/*.test.js"
    ],
    "collectCoverage": false,
    "coverageDirectory": "target/coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test/js/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 78,
        "lines": 80,
        "statements": 80
      }
    },
    "resetMocks": true,
    "clearMocks": true,
    "restoreMocks": true,
    "moduleNameMapper": {
      "^nf.Common$": "<rootDir>/src/test/js/mocks/nf-common.js"
    },
    "setupFiles": [
      "<rootDir>/src/test/js/jest.setup-fetch.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/js/jest.setup-dom.js"
    ]
  }
}
